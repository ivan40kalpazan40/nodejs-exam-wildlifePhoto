<main>
  <section id='catalog'>
    <h1>All posts</h1>
    <div class='band'>
      <!-- If there are posts for wildlife in the database display each of them -->
      {{#if posts}}
        {{#each posts}}
          <div class='flip flip-vertical'>
            <div class='front'>
              <img src='{{this.image}}' alt='image_nature_1' />
              <h1 class='text-shadow'>Keyword: {{this.keyword}}</h1>
            </div>
            <div class='back'>
              <h2>{{this.title}}</h2>
              <p>
                Description:
                {{this.description}}
              </p>
              <a href='/post/{{this._id}}/details' class='details'>Details</a>
            </div>
          </div>

        {{/each}}
      {{else}}
        <!-- If there are still no posts for wildlife in the database display: -->
        <div class='no-posts'>
          <div class='no-posts-img'>

            <img src='/img/animal.jpg' alt='image_nature_3' />
          </div>
          <p class='no-offer'>There are no posts yet...</p>
        </div>
      {{/if}}
    </div>
  </section>
</main>